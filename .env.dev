#
# Integrated Business Platform - Development Environment
# Used with: ./platform.sh start:dev
#

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

SECRET_KEY=django-insecure-dev-key-not-for-production-use-only
DEBUG=True

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,192.168.0.104,*

# CSRF Trusted Origins
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://localhost:8080,http://192.168.0.104:8000,http://192.168.0.104:8080

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

USE_SQLITE=False

# Development PostgreSQL (via Docker)
DB_NAME=krystal_platform_dev
DB_USER=platformadmin
DB_PASSWORD=5514
DB_HOST=db
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================

REDIS_URL=redis://redis:6379/0

# =============================================================================
# SSO CONFIGURATION
# =============================================================================

SSO_SECRET_KEY=dev-sso-secret-key-for-development-only
SSO_ALGORITHM=HS256
SSO_TOKEN_LIFETIME=3600
SSO_REFRESH_LIFETIME=86400

# =============================================================================
# APPLICATION PORTS
# =============================================================================

LEAVE_PORT=8001
QUOTATION_PORT=8002
EXPENSE_PORT=8003
CRM_PORT=8004
ASSET_PORT=8005
STRIPE_PORT=8006
ATTENDANCE_PORT=8007

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================

# Enable Django Debug Toolbar
ENABLE_DEBUG_TOOLBAR=True

# SSO Enforcement (set to False to allow access without SSO during development)
SSO_ENFORCE=True

# Log level
LOG_LEVEL=DEBUG
