#
# Integrated Business Platform - Environment Configuration Template
# Copy this file to .env.dev or .env.prod and configure accordingly
#

# =============================================================================
# DJANGO SETTINGS
# =============================================================================

# Security - CHANGE IN PRODUCTION!
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CSRF Trusted Origins (comma-separated, include protocol)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://localhost:8080

# =============================================================================
# DATABASE SETTINGS
# =============================================================================

# Set to True to use SQLite (development only)
USE_SQLITE=False

# PostgreSQL Settings
DB_NAME=krystal_platform
DB_USER=platformadmin
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432

# =============================================================================
# REDIS SETTINGS
# =============================================================================

# Redis URL (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SSO CONFIGURATION
# =============================================================================

# SSO Secret Key (for JWT token signing) - CHANGE IN PRODUCTION!
SSO_SECRET_KEY=your-sso-secret-key-change-in-production

# SSO Algorithm
SSO_ALGORITHM=HS256

# Token lifetimes (in seconds)
SSO_TOKEN_LIFETIME=3600
SSO_REFRESH_LIFETIME=86400

# =============================================================================
# APPLICATION PORTS (for microservice architecture)
# =============================================================================

LEAVE_PORT=8001
QUOTATION_PORT=8002
EXPENSE_PORT=8003
CRM_PORT=8004
ASSET_PORT=8005
STRIPE_PORT=8006
ATTENDANCE_PORT=8007

# =============================================================================
# EMAIL SETTINGS (optional)
# =============================================================================

# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# EXTERNAL SERVICES (optional)
# =============================================================================

# Stripe (for stripe_integration app)
# STRIPE_SECRET_KEY=sk_test_xxx
# STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
